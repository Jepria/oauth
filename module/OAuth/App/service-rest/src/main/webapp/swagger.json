{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": ""
  },
  "basePath": "/oauth/api",
  "paths": {
    "/authenticate": {
      "post": {
        "summary": "Authentication endpoint",
        "description": "This endpoint provides authentication via user credentials username/password",
        "operationId": "authenticate",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json;charset=utf-8"
        ],
        "parameters": [
          {
            "name": "code",
            "in": "query",
            "description": "Authorization code",
            "required": true,
            "type": "string"
          },
          {
            "name": "redirect_uri",
            "in": "query",
            "description": "Redirect URI",
            "required": true,
            "type": "string"
          },
          {
            "name": "client_id",
            "in": "query",
            "description": "Client ID",
            "required": true,
            "type": "string"
          },
          {
            "name": "client_name",
            "in": "query",
            "description": "Client ID",
            "required": false,
            "type": "string"
          },
          {
            "name": "state",
            "in": "query",
            "description": "State",
            "required": true,
            "type": "string"
          },
          {
            "name": "username",
            "in": "formData",
            "description": "Username",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "formData",
            "description": "Password",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "User found"
          },
          "202": {
            "description": "Error response",
            "schema": {
              "$ref": "#/definitions/ErrorDto"
            }
          },
          "307": {
            "description": "User found, redirect to provided redirectUri with authorization_code"
          }
        }
      }
    },
    "/authorize": {
      "get": {
        "summary": "Endpoint starts either Authorization Code or Implicit Flow",
        "description": "This endpoint is used in the code and implicit OAuth 2.0 flows which require end-user interaction.",
        "operationId": "authorize",
        "consumes": [
          "text/html",
          "text/x-gwt-rpc"
        ],
        "produces": [
          "application/json;charset=utf-8"
        ],
        "parameters": [
          {
            "name": "response_type",
            "in": "query",
            "description": "Indicates that your server expects to receive an authorization code",
            "required": true,
            "type": "string"
          },
          {
            "name": "client_id",
            "in": "query",
            "description": "The client ID you received when you first created the application",
            "required": true,
            "type": "string"
          },
          {
            "name": "redirect_uri",
            "in": "query",
            "description": "Indicates the URI to return the user to after authorization is complete",
            "required": true,
            "type": "string"
          },
          {
            "name": "state",
            "in": "query",
            "description": "A random string generated by your application, which you'll verify later",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "202": {
            "description": "Error response",
            "schema": {
              "$ref": "#/definitions/ErrorDto"
            }
          },
          "307": {
            "description": "Authorization Flow successfully started, redirect to provided redirect URI"
          }
        }
      }
    },
    "/token": {
      "post": {
        "summary": "",
        "description": "",
        "operationId": "getToken",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json;charset=utf-8"
        ],
        "parameters": [
          {
            "name": "grant_type",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "client_id",
            "in": "formData",
            "required": false,
            "type": "string"
          },
          {
            "name": "client_secret",
            "in": "formData",
            "required": false,
            "type": "string"
          },
          {
            "name": "redirect_uri",
            "in": "formData",
            "required": false,
            "type": "string"
          },
          {
            "name": "code",
            "in": "formData",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/TokenDto"
            }
          }
        }
      }
    },
    "/tokeninfo": {
      "post": {
        "summary": "",
        "description": "",
        "operationId": "getTokenInfo",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json;charset=utf-8"
        ],
        "parameters": [
          {
            "name": "token",
            "in": "formData",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/TokenInfoDto"
            }
          }
        }
      }
    },
    "/token/revoke": {
      "post": {
        "summary": "",
        "description": "",
        "operationId": "revokeToken",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json;charset=utf-8"
        ],
        "parameters": [
          {
            "name": "client_id",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "redirect_uri",
            "in": "formData",
            "required": false,
            "type": "string"
          },
          {
            "name": "token",
            "in": "formData",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "default": {
            "description": "successful operation"
          }
        }
      }
    }
  },
  "definitions": {
    "ErrorDto": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "TokenDto": {
      "type": "object",
      "properties": {
        "token_type": {
          "type": "string"
        },
        "expires_in": {
          "type": "integer",
          "format": "int32"
        },
        "access_token": {
          "type": "string"
        }
      }
    },
    "TokenInfoDto": {
      "type": "object",
      "properties": {
        "active": {
          "type": "boolean"
        },
        "client_id": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "sub": {
          "type": "string"
        },
        "exp": {
          "type": "integer",
          "format": "int64"
        },
        "aud": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "iss": {
          "type": "string"
        },
        "jti": {
          "type": "string"
        }
      }
    }
  }
}